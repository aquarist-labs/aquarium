<?xml version="1.0" encoding="utf-8"?>
<!-- OBS-Profiles: @BUILD_FLAVOR@ -->
<image schemaversion="6.8" name="project-aquarium" displayname="Project Aquarium">
    <description type="system">
	<author>Aquarium Project</author>
	<contact>alau@suse.com</contact>
        <specification>
            Project Aquarium is an easy to use, rock solid storage appliance based on Ceph
        </specification>
    </description>
    <profiles>
        <!-- Ceph foo -->
        <profile name="Ceph-base" description="Ceph requirements"/>
	    
        <!-- Platforms -->
        <profile name="Vagrant-VirtualBox-x86_64"
                 description="Vagrant for x86_64 with VirtualBox"
                 arch="x86_64">
            <requires profile="Vagrant-x86_64"/>
	</profile> 
	<profile name="Vagrant-libvirt-x86_64"
                 description="Vagrant for x86_64 with libvirt"
                 arch="x86_64">
            <requires profile="Vagrant-x86_64"/>
        </profile>
        <profile name="Vagrant" description="Vagrant" arch="x86_64">
	    <requires profile="Vagrant-x86_64"/>
        </profile>
	<profile name="Vagrant-x86_64" description="Vagrant" arch="x86_64"/>
        <profile name="SelfInstall"
                 description="Self Installing Image"
                 arch="x86_64"/>
        <!-- Images (flavor + platform) -->
        <profile name="Vagrant-VirtualBox"
                 description="Vagrant with VirtualBox"
                 arch="x86_64">
            <requires profile="Vagrant-VirtualBox-x86_64"/>
            <requires profile="Vagrant"/>
        </profile>
        <profile name="Vagrant-libvirt"
                 description="Vagrant with libvirt"
                 arch="x86_64">
            <requires profile="Vagrant-libvirt-x86_64"/>
            <requires profile="Vagrant"/>
        </profile>
        <profile name="SelfInstall"
                 description="Aquarium for Host Install"
                 arch="x86_64">
            <requires profile="SelfInstall"/>
        </profile>
        <profile name="Ceph" description="Ceph for Host install" arch="x86_64">
            <requires profile="SelfInstall"/>
            <requires profile="Ceph-base"/>
        </profile>

        <!-- default vagrant images using libvirt, optional virtualbox -->
        <profile name="Ceph-Vagrant-VirtualBox"
                description="Ceph for Vagrant Host with VirtualBox"
                arch="x86_64">
            <requires profile="Vagrant-VirtualBox"/>
            <requires profile="Ceph-base"/>
        </profile>
        <profile name="Ceph-Vagrant-libvirt"
                 description="Ceph for Vagrant Host with libvirt"
                 arch="x86_64">
            <requires profile="Vagrant-libvirt"/>
            <requires profile="Ceph-base"/>
        </profile>
    </profiles>
    <preferences>
        <version>0.1.0</version>
        <packagemanager>zypper</packagemanager>
        <locale>en_US</locale>
        <keytable>us</keytable>
        <rpm-excludedocs>true</rpm-excludedocs>
        <rpm-check-signatures>false</rpm-check-signatures>
        <bootloader-theme>openSUSE</bootloader-theme>
    </preferences>
    <preferences profiles="Vagrant-libvirt">
        <type
            image="oem"
            filesystem="xfs"
            format="vagrant"
            bootloader="grub2"
            bootloader_console="gfxterm"
            firmware="uefi"
            kernelcmdline="quiet systemd.show_status=yes console=ttyS0,115200 console=tty0 root=/dev/vda3 disk=/dev/vda"
            bootpartition="false"
            bootkernel="custom"
            devicepersistency="by-uuid"
        >
            <vagrantconfig provider="libvirt" virtualsize="24"/>
            <size unit="G">24</size>
        </type>
    </preferences>
    <preferences profiles="Vagrant-VirtualBox">
        <type
            image="oem"
            filesystem="xfs"
            format="vagrant"
            bootloader="grub2"
            bootloader_console="gfxterm"
            firmware="uefi"
            kernelcmdline="quiet systemd.show_status=yes console=ttyS0,115200 console=tty0 root=/dev/sda3 disk=/dev/sda"
            bootpartition="false"
            bootkernel="custom"
            devicepersistency="by-uuid"
        >
            <vagrantconfig provider="virtualbox" virtualsize="24"/>
            <size unit="G">24</size>
        </type>
    </preferences>
    <preferences profiles="SelfInstall">
        <type
            image="oem"
            filesystem="xfs"
            bootloader="grub2"
            bootloader_console="gfxterm"
            firmware="uefi"
            initrd_system="dracut"
            installiso="true"
            installboot="install"
            kernelcmdline="quiet systemd.show_status=yes console=ttyS0,115200 console=tty0 rd.kiwi.ramdisk ramdisk_size=4096000"
            devicepersistency="by-uuid"
        >
            <oemconfig>
                <oem-skip-verify>true</oem-skip-verify>
                <oem-unattended>true</oem-unattended>
                <oem-unattended-id>/dev/ram1</oem-unattended-id>
                <oem-systemsize>4096</oem-systemsize>
                <oem-swap>false</oem-swap>
                <oem-multipath-scan>false</oem-multipath-scan>
            </oemconfig>
            <size unit="G">3</size>
        </type>
        <type
            image="iso"
            primary="true"
            flags="overlay"
            hybridpersistent_filesystem="xfs"
            hybridpersistent="true"
            kernelcmdline="quiet systemd.show_status=yes console=ttyS0,115200 console=tty0"
            devicepersistency="by-uuid"/>
    </preferences>
    <users>
         <user password="aquarium" home="/home/aquarium" name="aquarium" groups="aquarium"  pwdformat="plain"/>
    </users>
    <users profiles="Vagrant">
        <user password="vagrant"
              home="/home/vagrant"
              name="vagrant"
              groups="vagrant"
              pwdformat="plain"/>
    </users>

    <repository type="rpm-md" alias="kiwi" priority="1">
        <source path="obs://Virtualization:Appliances:Builder/openSUSE_Tumbleweed"/>
    </repository>

    <repository type="rpm-md" alias="Tumbleweed_OSS">
        <source path='https://download.opensuse.org/tumbleweed/repo/oss'/>
    </repository>
    <packages type="image">
        <package name="live-add-yast-repos"/>
        <!-- Apparently zypper (?) doesn't like having multiple patterns with the same name,
             so avoid using namedCollection at least for basesystem -->
        <package name="patterns-base-base"/>
        <package name="patterns-base-bootloader"/>
        <package name="kernel-default"/>
    </packages>

    <packages type="image" profiles="Ceph-base" patternType="onlyRequired"> 
        <package name="lvm2"/>
        <package name="chrony"/>
        <package name="tuned"/>
        <package name="python38-pip"/>
        <package name="python38-aiofiles"/>
        <package name="python38-requests"/>
        <package name="python38-PyYAML"/>
        <package name="python3-rados"/>
        <package name="etcdctl"/>
        <archive name="aquarium.tar.gz"/>
        <archive name="root.tar.gz"/>
    </packages>

    <packages type="image" profiles="Vagrant-libvirt,Vagrant-VirtualBox">
        <!-- Needed for initial configuration, except on OpenStack-Cloud, where cloud-init is used -->
        <package name="growpart-generator"/>
        <!-- vagrant-libvirt uses nfs for synced folders -->
        <package name="nfs-client"/>

        <!-- adds entropy to Vagrant boxes -->
        <package name="haveged"/>
    </packages>
    <packages type="image" profiles="SelfInstall">
        <package name="dracut-kiwi-oem-dump"/>
        <package name="kernel-firmware-all"/> <!-- Fix choice between kernel-firmware and kernel-firmware-all -->
        <package name="dracut-kiwi-live"/>
        <package name="dracut-kiwi-lib"/>
        <package name="syslinux"/>
        <archive name="aquarium_user.tar.gz"/>
    </packages>

    <packages type="bootstrap">
        <!-- Avoid that zypper picks the busybox-foo variant for those, that would fail later -->
        <package name="udev"/>
        <package name="coreutils"/>
        <package name="xz"/>
        <package name="grep"/>
        <package name="gzip"/>
        <package name="gawk"/>
        <package name="issue-generator"/>

        <!-- network utilities -->
        <package name="iputils"/>
        <package name="iproute2"/>
        <package name="wicked"/>

        <!-- Vagrant sudo-->
        <package name="sudo"/>
        <package name="openssh"/>
        <package name="openssh-server"/>

        <!-- This requires openssl, and so avoids that zypper picks libressl here -->
        <package name="mokutil"/>

        <!-- Needed for pip install from git repo -->
        <package name="git"/>

        <package name="filesystem"/>
        <package name="glibc-locale-base"/>
        <!-- So that https repos work for image package downloads -->
        <package name="ca-certificates-mozilla"/>
        <package name="dracut-kiwi-oem-repart"/>

	<!-- container for ceph to run on -->
        <namedCollection name="container_runtime"/>
        <package name="patterns-containers-container_runtime"/>
	<!-- AppArmor pattern -->
        <namedCollection name="apparmor"/>
    </packages>
</image>
